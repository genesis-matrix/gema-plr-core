#   - echo 'my pass-phrase' | gpg --dir=~/.vault/uris/genesis-ctl/etc/salt/gpgkeys/ -e -a -r <KEYID>
#   - EXAMPLE: |
#     localhost:
#       host: 127.0.0.1
#       port: 22
#       user: root
#       tty: True
#       # using the default password
#       passwd: example-password
#       minion_opts:
#         grains:
#           machine_class: server
#           onduty: False
#           basebox_image: genesis-CentOSv6
#           deploy_env: LAB



#
salt-master-d1:
  host: salt-master-d1.vagrant.test
  user: vagrant
  minion_opts:
    grains:
      startup_states: highstate
      machine_class: server
      onduty: True
      basebox_image: genesis-CentOSv7
      machine_role: ['salt_master', 'salt_minion']
      provision_alloc: {'ram': 1512}



